{% for acte in actes %}
    <h1 style="text-align: center;";>Acte {{acte}}</h1>
    <div class="example-wrapper" style="display: flex; flex-wrap: wrap; margin-left: 25%;">
        {% for article in articles %}
            {% if article.acte == acte %}
                <div class="card border-primary mb-3" style="max-width: 20rem; width: 50%; margin: 10px">
                    <div class="card-header">{{article.titre}}</div>
                    <div class="card-body">
                        <p class="card-text">{{article.resume}}</p>
                        <button onclick="location.href='./Article/num/{{article.id}}'" type="button" class="btn btn-primary">Lire</button>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endfor %}


